                                <Style TargetType="Image">
                                    <Setter Property="Source" Value="/Assets/Images/Settings.png"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSetting}" Value="true">
                                            <Setter Property="Source" Value="/Assets/Images/Settings.png"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                        <TextBlock Text="Setting" Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center"></TextBlock>
                    </Grid>
                </ToggleButton.Content>
            </ToggleButton>
            <Border Grid.Row="12" CornerRadius="29" HorizontalAlignment="Left"
                    Background="{StaticResource NavBarMenuForgroundSelectionColor}" Height="175" Width="206">
