                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Image Source="/Assets/Images/TKMLIFE-LOGO 2.png" Stretch="Fill" Height="61" Width="139" Margin="0 38 0 40 " HorizontalAlignment="Left"/>
            <TextBlock Text="GENERAL" Grid.Row="1" Style="{StaticResource SideNavbarMenuTitle}"></TextBlock>
            <ToggleButton  Grid.Row="2" Style="{StaticResource SideNavbarToggleButtonStyle}" IsChecked="{Binding IsDashboard, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <ToggleButton.Content>
                    <Grid HorizontalAlignment="Left" Margin="24,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Image Width="20" Height="20">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Source" Value="/Assets/Images/DashboardUnselected.png"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDashboard}" Value="true">
                                            <Setter Property="Source" Value="/Assets/Images/DashboardSelected.png"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                        <TextBlock Text="Dashboard" Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center"></TextBlock>
                    </Grid>
                </ToggleButton.Content>
            </ToggleButton>
            <ToggleButton  Grid.Row="3" Style="{StaticResource SideNavbarToggleButtonStyle}" IsChecked="{Binding IsHowItWorks, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
