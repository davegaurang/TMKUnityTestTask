                                <Style TargetType="Image">
                                    <Setter Property="Source" Value="/Assets/Images/HowItWorkUnselected.png"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsHowItWorks}" Value="true">
                                            <Setter Property="Source" Value="/Assets/Images/HowItWorkSelected.png"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                        <TextBlock Text="How It Works" Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center"></TextBlock>
                    </Grid>
                </ToggleButton.Content>
            </ToggleButton>
            <ToggleButton  Grid.Row="4" Style="{StaticResource SideNavbarToggleButtonStyle}" IsChecked="{Binding IsResources, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <ToggleButton.Content>
                    <Grid HorizontalAlignment="Left" Margin="24,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Image Width="20" Height="20">
                            <Image.Style>
                                <Style TargetType="Image">
